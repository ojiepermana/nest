{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/standalone/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/standalone/tsconfig.app.json"
  },
  "projects": {
    "generator": {
      "type": "library",
      "root": "libs/generator",
      "entryFile": "index",
      "sourceRoot": "libs/generator/src",
      "compilerOptions": {
        "tsConfigPath": "libs/generator/tsconfig.lib.json",
        "webpack": false,
        "assets": [
          {
            "include": "database/schemas/*.sql",
            "outDir": "dist/libs/generator"
          }
        ]
      }
    },
    "standalone": {
      "type": "application",
      "root": "apps/standalone",
      "entryFile": "main",
      "sourceRoot": "apps/standalone/src",
      "compilerOptions": {
        "tsConfigPath": "apps/standalone/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/standalone"
}
