{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "generator": {
      "type": "library",
      "root": "libs/generator",
      "entryFile": "index",
      "sourceRoot": "libs/generator/src",
      "compilerOptions": {
        "tsConfigPath": "libs/generator/tsconfig.lib.json",
        "webpack": false,
        "assets": [
          {
            "include": "database/schemas/*.sql",
            "outDir": "dist/libs/generator"
          }
        ]
      }
    },
    "nest": {
      "type": "library",
      "root": "libs/nest",
      "entryFile": "index",
      "sourceRoot": "libs/nest/src",
      "compilerOptions": {
        "tsConfigPath": "libs/nest/tsconfig.lib.json",
        "webpack": false
      }
    }
  }
}
